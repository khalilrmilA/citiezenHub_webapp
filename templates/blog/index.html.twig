                                    <script>
                                        function handleMenuAction(select, postId, caption, image) {
                                            var selectedValue = select.value;
                                            if (selectedValue === "modifier") {
                                                showModifierPopup(caption, image);
                                            } else if (selectedValue === "supprimer") {
                                                if (postId) {
                                                    deletePost(postId);
                                                }
                                            }
                                        }

                                        function deletePost(postId) {
                                            if (confirm("Ãtes-vous sÃ»r de vouloir supprimer ce post ?" + postId)) {
                                                $.ajax({
                                                    url: '/blog/' + postId,
                                                    type: 'DELETE',
                                                    success: function(response) {
                                                        // RafraÃ®chir la page ou mettre Ã  jour la liste des posts
                                                        location.reload();
                                                    },
                                                    error: function(xhr, status, error) {
                                                        // GÃ©rer les erreurs en fonction de vos besoins
                                                        console.error(error);
                                                    }
                                                });
                                            }
                                        }

                                        function showModifierPopup(caption, image) {
                                            var modal = document.getElementById("modifierModal");
                                            var form = document.getElementById("modifierForm");
                                            let messageTextarea = document.getElementById("captionModfier");
                                            let imageModifier = document.getElementById("imageModifer");
                                            messageTextarea.value = caption;
                                            imageModifier.src = "images/blog/" + image;


                                            modal.style.display = "block";

                                            form.reset();
                                        }


                                        function closeModifierPopup() {
                                            // RÃ©cupÃ©rer la fenÃªtre modale
                                            var modal = document.getElementById("modifierModal");
                                            modal.style.display = "none";
                                        }

                                        // Fonction appelÃ©e lorsque l'utilisateur soumet le formulaire
                                        function submitModifierForm(event, idPost) {
                                            event.preventDefault();
                                            let formData = new FormData();
                                            let caption = $('#contact-messageUpload').val();
                                            formData.append('image', $('#nipaUpload').prop('files')[0]);
                                            formData.append('caption', caption);

                                            $.ajax({

                                                url: '/blog/edit/' + idPost,
                                                type: "POST",
                                                data: formData,

                                                async: true,
                                                processData: false,
                                                contentType: false,
                                                success: function (response) {
                                                    console.log(response.state);
                                                    $('#contact-message').val('');
                                                    $('#nipa').val('');
                                                },
                                                error: function (response) {
                                                    console.log("error");
                                                },
                                            });
                                            closeModifierPopup();
                                        }

                                    </script>


